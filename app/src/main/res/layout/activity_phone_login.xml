<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.PhoneLoginActivity">
    <EditText
        android:id="@+id/ph_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="17dp"
        android:layout_marginEnd="17dp"
        android:layout_marginTop="180dp"
        android:background="@drawable/inputs"
        android:padding="15dp"
        android:hint="write Phone number here..."
        android:textAllCaps="false"
        android:textSize="15sp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:inputType="phone"
        />

    <EditText
        android:id="@+id/Verification_code"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="17dp"
        android:layout_marginEnd="17dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/inputs"
        android:padding="15dp"
        android:hint="write Verification code here..."
        android:textAllCaps="false"
        android:textSize="15sp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:layout_below="@+id/ph_number"
        android:visibility="invisible"
        />
    <Button
        android:id="@+id/send_verify_code"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/buttons"
        android:layout_alignParentStart="true"
        android:layout_marginStart="17dp"
        android:layout_marginEnd="17dp"
        android:layout_marginTop="60dp"
        android:layout_below="@+id/Verification_code"
        android:text="Send Verification Code"
        android:textColor="#fff"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textAllCaps="false"
        />

    <Button
        android:id="@+id/verify_bu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/buttons"
        android:layout_alignParentStart="true"
        android:layout_marginStart="17dp"
        android:layout_marginEnd="17dp"
        android:layout_marginTop="8dp"
        android:layout_below="@+id/send_verify_code"
        android:text="Verify"
        android:textColor="#fff"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textAllCaps="false"
        android:visibility="invisible"
        />
</RelativeLayout>