<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.Login_act">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/img"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:src="@mipmap/ic_launcher"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:scaleType="fitCenter"/>
            <EditText
                android:id="@+id/login_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/img"
                android:layout_alignParentStart="true"
                android:hint="Email..."
                android:inputType="textEmailAddress"
                android:background="@drawable/inputs"
                android:padding="13dp"
                android:layout_marginTop="25dp"
                android:layout_marginLeft="17dp"
                android:layout_marginRight="17dp"/>

            <EditText
                android:id="@+id/login_pass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/login_email"
                android:layout_alignParentStart="true"
                android:hint="Password..."
                android:inputType="textPassword"
                android:background="@drawable/inputs"
                android:padding="13dp"
                android:layout_marginTop="25dp"
                android:layout_marginLeft="17dp"
                android:layout_marginRight="17dp"/>

            <TextView
                android:id="@+id/forget_pass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/login_pass"
                android:text="Forget Password ?"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="2dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="23dp"
                android:textSize="17sp"
                android:textStyle="bold"
                android:textColor="#02205C"
                android:textAlignment="textEnd"/>

            <Button
                android:id="@+id/login_bu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/forget_pass"
                android:padding="4dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="19dp"
                android:layout_marginRight="19dp"
                android:textSize="24sp"
                android:text="Login"
                android:textColor="#fff"
                android:background="@drawable/buttons"
                />

            <TextView
                android:id="@+id/new_account"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/login_bu"
                android:text="Need New Account ?"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="2dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="23dp"
                android:textSize="17sp"
                android:textStyle="bold"
                android:textColor="#02205C"
                android:textAlignment="center"/>

            <TextView
                android:id="@+id/login_with"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/new_account"
                android:text="or Login using your "
                android:layout_centerHorizontal="true"
                android:layout_marginTop="35dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="23dp"
                android:textSize="17sp"
                android:textStyle="bold"
                android:textColor="#555"
                android:textAlignment="center"/>

            <Button
                android:id="@+id/phone_with"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/login_with"
                android:padding="4dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="19dp"
                android:layout_marginRight="19dp"
                android:textSize="14sp"
                android:text="Phone"
                android:textColor="#fff"
                android:textAllCaps="false"
                android:background="@drawable/buttons"
                />
</RelativeLayout>


    </ScrollView>
</RelativeLayout>