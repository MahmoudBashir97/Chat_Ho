<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.Login_act"
    android:background="#02205C">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/txt_signin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sign in"
                android:textSize="30sp"
                android:textColor="#ffffff"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="50dp"
                android:layout_marginBottom="20dp"
                android:textStyle="bold"/>
            <RelativeLayout
                android:id="@+id/ler"
                android:layout_width="360dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/txt_signin"
                android:layout_marginTop="50dp"
                android:background="@drawable/bck_grr"
                android:padding="30dp">

            <EditText
                android:id="@+id/login_email"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:hint="Email..."
                android:inputType="textEmailAddress"
                android:padding="13dp"
                android:layout_marginTop="25dp"
                android:layout_centerHorizontal="true"
                android:textColor="#02205C"/>

            <EditText
                android:id="@+id/login_pass"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/login_email"
                android:hint="Password..."
                android:inputType="textPassword"
                android:textColor="#02205C"
                android:padding="13dp"
                android:layout_marginTop="25dp"
                android:layout_centerHorizontal="true"/>

            <TextView
                android:id="@+id/forget_pass"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/login_pass"
                android:text="Forget Password ?"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="2dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="23dp"
                android:textSize="15sp"
                android:textStyle="normal"
                android:textColor="#0440B8"
                android:textAlignment="textEnd"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="360dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/ler"
                android:layout_marginTop="30dp"
                android:background="@drawable/bck_grr2"
                android:padding="30dp">
            <Button
                android:id="@+id/login_bu"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:padding="4dp"
                android:layout_marginTop="5dp"
                android:layout_centerHorizontal="true"
                android:textSize="24sp"
                android:text="Login"
                android:textColor="#fff"
                android:background="@drawable/buttons"
                />

            <TextView
                android:id="@+id/new_account"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/login_bu"
                android:text="Need New Account ?"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="2dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="23dp"
                android:textSize="16sp"
                android:textStyle="normal"
                android:textColor="#0440B8"
                android:textAlignment="center"/>

            <TextView
                android:id="@+id/login_with"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/new_account"
                android:text="or Login using your "
                android:layout_centerHorizontal="true"
                android:layout_marginTop="35dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="23dp"
                android:textSize="16sp"
                android:textStyle="normal"
                android:textColor="#0440B8"
                android:textAlignment="center"/>

            <Button
                android:id="@+id/phone_with"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/login_with"
                android:padding="4dp"
                android:layout_marginTop="5dp"
                android:layout_centerHorizontal="true"
                android:textSize="17sp"
                android:text="Phone"
                android:textColor="#fff"
                android:textAllCaps="false"
                android:background="@drawable/buttons"
                />
            </RelativeLayout>
</RelativeLayout>


    </ScrollView>
</RelativeLayout>